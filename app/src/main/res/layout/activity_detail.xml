<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foto_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/teks_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/foto_detail"
            android:paddingTop="10dp"
            android:text="@string/nama_film"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teks_rilis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks_judul"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/foto_detail"
            android:text="@string/rilis"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teks_deksripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks_rilis"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_foto"
            android:ellipsize="end"
            android:justificationMode="inter_word"
            android:text="@string/lorem" />
    </LinearLayout>

</RelativeLayout>